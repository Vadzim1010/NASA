<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/image_list">

    <fragment
        android:id="@+id/image_list"
        android:name="com.example.nasa.ui.image.NasaImagesFragment"
        tools:layout="@layout/fragment_nasa_images">

        <action
            android:id="@+id/to_description"
            app:destination="@id/description" />

    </fragment>

    <fragment
        android:id="@+id/description"
        android:name="com.example.nasa.ui.description.DescriptionFragment"
        tools:layout="@layout/fragment_description" >

        <argument
            android:name="item_id"
            app:argType="string" />

    </fragment>

</navigation>